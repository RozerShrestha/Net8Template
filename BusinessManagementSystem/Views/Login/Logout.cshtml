@{
    var claims = User.Identities.First().Claims.ToList();
    Layout = "_Login";
}
<div class="h-100 d-flex align-items-center justify-content-center">
        <div class="card card-widget widget-user shadow" style="width:500px; margin-top:90px">
        <div class="widget-user-header p-2" style="background-color: #31006F !important;">
            <h3 class="widget-user-username" style="color:whitesmoke">@claims.FirstOrDefault(x => x.Type.Equals("nic_full_name", StringComparison.OrdinalIgnoreCase)).Value</h3>
            <h5 class="widget-user-desc" style="color:whitesmoke">You have been logged out</h5>
            </div>
            
            <div class="card-footer">
                <div class="row">
                @Html.ActionLink("Click here to login", "Index", "Dashboard")
                </div>

            </div>
        </div>
</div>
